doctype html
html
    head(lang='en-US')
        title Sign In    
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width', initial-scale=1.0)
        script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js', integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')           
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous')      
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
    body
        link(href='../public/css/common.css', rel='stylesheet', type='text/css')
        br
        div(class="container", style="width: 25rem;margin-top:50px;")
            div(class="jumbotron")
                h1 Sign up  
                if error
                    div(class="alert alert-danger") #{error}
                    br                           
                form(action="/register", method="POST")
                    div(class="form-group")
                        label(for="fname") Full name:
                        if fname
                            input(type="text", class="form-control", name="fname", value=fname, required)
                        else
                            input(type="text", class="form-control", name="fname", required)            
                    div(class="form-group")
                        label(for="uname") Username:
                        if uname
                            input(type="text", class="form-control", name="uname", value=uname, required)
                        else
                            input(type="text", class="form-control", name="uname", required)
                    div(class="form-group")
                        label(for="email") Email:
                        if email
                            input(type="email", class="form-control", name="email", value=email, required)
                        else
                            input(type="email", class="form-control", name="email", required)                    
                    div(class="form-group")
                        label(for="pwd") Password:
                        input(type="password", class="form-control", name="pwd", required)
                    div(class="form-group")
                        label(for="cpwd") Re-enter password:
                        input(type="password", class="form-control", name="cpwd", required)
                    div(class="form-group")
                        label(for="hint") Password recovery hint:
                        if hint
                            input(type="text", class="form-control", name="hint", value=hint, required)
                        else
                            input(type="text", class="form-control", name="hint", required)                                         
                    button(type="submit", class="btn btn-success", style="text-decoration:none;") Sign up        